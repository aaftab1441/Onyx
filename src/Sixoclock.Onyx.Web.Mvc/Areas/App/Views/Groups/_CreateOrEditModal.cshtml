@using Sixoclock.Onyx.Web.Areas.App.Models.Common.Modals

@using Sixoclock.Onyx.Web.Areas.App.Models.Groups
@model CreateOrEditGroupViewModel

@Html.Partial("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateGroup")))

<div class="modal-body">
    <form role="form" novalidate class="form-validation">
        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <div class="form-group">
                <input type="hidden" name="Id" value="@Model.Group.Id" />
                <input type="hidden" name="TenantId" value="@Model.Group.TenantId" />
                <label class="form-md-floating-label">@L("Name")</label>
                <input class="form-control" type="text" name="GroupName" value="@Model.Group.GroupName" required>
            </div>
        </div>

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <div class="form-group">
                <label class="form-md-floating-label">@L("Install")</label>
                <select name="InstallId" class="form-control bs-select" required>
                    <option value="0">@L("DropdownDefault")</option>
                    @for (int i = 0; i < ViewBag.Installs.Items.Count; i++)
                    {
                        @if (Model.Group.InstallId == ViewBag.Installs.Items[i].Id)
                        {

                            <option value="@ViewBag.Installs.Items[i].Id" selected>@ViewBag.Installs.Items[i].Name</option>
                        }
                        else
                        {
                            <option value="@ViewBag.Installs.Items[i].Id">@ViewBag.Installs.Items[i].Name</option>
                        }

                    }
                </select>
            </div>
            <div class="form-group">
                <label class="form-md-floating-label">@L("Country")</label>
                <select name="CountryId" class="form-control bs-select" required>
                    <option value="0">@L("DropdownDefault")</option>
                    @for (int i = 0; i < ViewBag.Countries.Items.Count; i++)
                    {
                        @if (Model.Group.CountryId == ViewBag.Countries.Items[i].Id)
                        {

                            <option value="@ViewBag.Countries.Items[i].Id" selected>@ViewBag.Countries.Items[i].Name</option>
                        }
                        else
                        {
                            <option value="@ViewBag.Countries.Items[i].Id">@ViewBag.Countries.Items[i].Name</option>
                        }

                    }
                </select>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
