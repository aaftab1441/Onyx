@using Sixoclock.Onyx.Web.Areas.App.Models.Common.Modals

@using Sixoclock.Onyx.Web.Areas.App.Models.Markets
@model CreateOrEditMarketViewModel

@Html.Partial("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateMarket")))

<div class="modal-body">
    <form role="form" novalidate class="form-validation">
        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <div class="form-group">
                <label class="form-md-floating-label">@L("Name")</label>
                <input type="hidden" name="Id" value="@Model.Market.Id" />
                <input type="hidden" name="TenantId" value="@Model.Market.TenantId" />
                <input class="form-control" type="text" name="MarketName" value="@Model.Market.MarketName" required>
            </div>
        </div>

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <div class="form-group">
                <label class="form-md-floating-label">@L("Customer")</label>
                <select name="CustomerId" class="form-control bs-select" required>
                    <option value="0">@L("DropdownDefault")</option>
                    @for (int i = 0; i < ViewBag.Customers.Items.Count; i++)
                    {
                        @if (Model.Market.CustomerId == ViewBag.Customers.Items[i].Id)
                        {

                            <option value="@ViewBag.Customers.Items[i].Id" selected>@ViewBag.Customers.Items[i].Name</option>
                        }
                        else
                        {
                            <option value="@ViewBag.Customers.Items[i].Id">@ViewBag.Customers.Items[i].Name</option>
                        }
                    }
                </select>
            </div>
            
        </div>
    </form>
</div>

@Html.Partial("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
