@using Sixoclock.Onyx.Web.Areas.App.Models.Common.Modals

@using Sixoclock.Onyx.Web.Areas.App.Models.Capacities
@model CreateOrEditCapacitiesViewModel

@Html.Partial("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateCapacity")))

<div class="modal-body">
    <form role="form" novalidate class="form-validation">
        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <div class="form-group">
                <label class="form-md-floating-label">@L("SelectUnit")</label>
                <select name="UnitId" class="form-control bs-select" required>
                    <option value="0">@L("DropdownDefault")</option>
                    @for (int i = 0; i < ViewBag.Units.Items.Count; i++)
                    {
                        @if (Model.Capacity.UnitId == ViewBag.Units.Items[i].Id)
                        {

                            <option value="@ViewBag.Units.Items[i].Id" selected>@ViewBag.Units.Items[i].Name</option>
                        }
                        else
                        {
                            <option value="@ViewBag.Units.Items[i].Id">@ViewBag.Units.Items[i].Name</option>
                        }

                    }
                </select>
            </div>

        </div>

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <div class="form-group">
                <label  class="form-md-floating-label">@L("SelectPower")</label>
                <select name="PowerId" class="form-control bs-select" required>
                    <option value="0">@L("DropdownDefault")</option>
                    @for (int i = 0; i < ViewBag.Powers.Items.Count; i++)
                    {
                        @if (Model.Capacity.PowerId== ViewBag.Powers.Items[i].Id)
                        {

                            <option value="@ViewBag.Powers.Items[i].Id" selected>@ViewBag.Powers.Items[i].Name</option>
                        }
                        else
                        {
                            <option value="@ViewBag.Powers.Items[i].Id">@ViewBag.Powers.Items[i].Name</option>
                        }

                    }
                </select>
            </div>

        </div>
        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <input type="hidden" name="Id" value="@Model.Capacity.Id" />
            <input type="hidden" name="TenantId" value="@Model.Capacity.TenantId" />
            <label class="form-md-floating-label">@L("CapacityValue")</label>
            <input class="form-control" type="text" name="Value" value="@Model.Capacity.Value" required>
        </div>

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <div class="form-group">
                <label class="form-md-floating-label">@L("Comment")</label>
                <input class="form-control" type="text" name="Comment" value="@Model.Capacity.Comment" required>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
