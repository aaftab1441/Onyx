@using Sixoclock.Onyx.Web.Areas.App.Models.Common.Modals

@using Sixoclock.Onyx.Web.Areas.App.Models.Chargepoints
@model CreateOrEditChargepointViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">
                <span>Manage Chargepoint</span>
            </h4>
        </div>
        <div class="modal-body">
            <form role="form" novalidate class="form-validation">
                <div class="form-group">
                    <label>Model : @Model.Chargepoint.ModelName</label>
                </div>
                <div class="form-group">
                    <label>Vendor : @Model.Chargepoint.VendorName</label>
                </div>
                <div class="form-group">
                    <label class="form-md-floating-label">Admin Status : @Model.Chargepoint.AdminStatus</label>
                </div>
                <div class="form-group">
                    <label class="form-md-floating-label">Comment : @Model.Chargepoint.Comment</label>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn default close-button" data-dismiss="modal">@L("Cancel")</button>
        </div>
    </div>
</div>
