@using Sixoclock.Onyx.Web.Areas.App.Models.Common.Modals

@using Sixoclock.Onyx.Web.Areas.App.Models.Chargepoints
@model CreateOrEditChargepointViewModel

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">
                <span></span>
            </h4>
        </div>
        <div class="modal-body">
            <form role="form" novalidate class="form-validation">
                <table class="table-advance">
                    <tr>
                        <td class="col-sm-4">
                            <div class="form-group">
                                <input type="hidden" id="Id" value="@Model.Chargepoint.Id" />
                                <label>Model : @Model.Chargepoint.ModelName</label>
                            </div>
                        </td>
                        <td class="col-sm-4">
                            <div class="form-group">
                                <label>Vendor : @Model.Chargepoint.VendorName</label>
                            </div>
                        </td>
                        <td class="col-sm-4">
                            <div class="form-group">
                                <label>Version : @Model.Chargepoint.OCPPVersionTransportName</label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-4">
                            <div class="form-group">
                                <input type="button" value="Refresh values from Chargepoint" class="btn default" onclick="RefreshValuesFromCP()" />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-4">
                            <div class="form-group">
                                <input type="button" value="Set all values" class="btn default" onclick="setAllValues()" />
                            </div>
                        </td>
                    </tr>
                </table>
                <table id="OCPPTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("Feature")</th>
                            <th>@L("Key")</th>
                            <th>@L("Spine")</th>
                            <th>@L("Chargepoint")</th>
                            <th>@L("RW")</th>
                        </tr>
                    </thead>
                </table>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn default close-button" data-dismiss="modal"><i class="fa fa-close"></i> <span>@L("Close")</span></button>
        </div>
    </div>
</div>