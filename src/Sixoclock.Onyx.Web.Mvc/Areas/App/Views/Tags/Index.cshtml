@using System.Threading.Tasks
@using Sixoclock.Onyx.Authorization
@using Sixoclock.Onyx.Web.Areas.App.Startup
@using Sixoclock.Onyx.Web.Startup

@model Sixoclock.Onyx.Web.Areas.App.Models.Tags.TagsViewModel

@{
    ViewBag.CurrentPageName = AppPageNames.Common.UserTags;
}

@section Scripts
{
    <environment names="Development">
        <script src="~/view-resources/Areas/App/Views/Tags/_CreateOrEditModal.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/App/Views/Tags/Index.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/App/Views/Tags/_CreateOrEditModal.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/App/Views/Tags/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Tags")</span> <small>@L("TagsHeaderInfo")</small>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button id="CreateNewTagButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewTag")</button>
    </div>
</div>
<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <form class="horizontal-form" id="TagFilterForm">
                <div class="form-body">
                    <div class="row margin-bottom-10">
                        <div class="col-md-12">
                            <div class="inputs inputs-full-width">
                                <div class="portlet-input">
                                    <div class="input-group">
                                        <input id="TagsTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" />
                                        <span class="input-group-btn">
                                            <button id="GetTagsButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="TagFiltersArea" style="display: none">
                        <div class="row margin-bottom-10">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" id="name" type="text" placeholder="@L("FilterByName")" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" id="comment" placeholder="@L("FilterByComment")" type="text" />
                                </div>
                            </div>
                        </div>
                        <div class="row margin-bottom-10">
                            <div class="col-sm-12 text-right">
                                <button id="RefreshTagListButton" class="btn blue"><i class="fa fa-refresh"></i> @L("Refresh")</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row margin-bottom-10">
                    <div class="col-sm-12">
                        <span id="ShowAdvancedFiltersSpan" class="clickable-item text-muted"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="clickable-item text-muted" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            </form>
        </div>
        <table id="TagsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
            <thead>
                <tr>
                    <th>@L("Actions")</th>
                    <th>@L("TagId")</th>
                    <th>@L("ParentTag")</th>
                    <th>@L("User")</th>
                    <th>@L("AuthorizationStatus")</th>
                    <th>@L("Expires")</th>
                    <th>@L("Comment")</th>
                    <th>@L("CreationTime")</th>
                </tr>
            </thead>
        </table>
    </div>
</div>