@using Sixoclock.Onyx.Web.Areas.App.Models.Common.Modals
@using Sixoclock.Onyx.Web.Areas.App.Models.Segments
@model Sixoclock.Onyx.Web.Areas.App.Models.Segments.CreateOrEditSegmentServiceViewModel
@Html.Partial("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("PriceParameters")))
<style type="text/css">
    .modal-dialog {
        position: relative;
        display: table; /* This is important */
        overflow-y: auto;
        overflow-x: auto;
        width: auto;
        min-width: 300px;
    }
</style>


<div class="modal-body">
   
   
    <div class="portlet light margin-bottom-0">
        <div class="portlet-body">
            <form role="form" novalidate class="form-validation">
                <input id="SegmentId" type="hidden" name="SegmentId" value="@ViewBag.SegmentId" />
                <table>
                    <thead>
                    <tr>

                        <th width="200">
                            <label class="form-md-floating-label">@L("Service")</label>
                        </th>

                        <th width="150">

                        </th>

                    </tr>
                    </thead>
                    <tbody>
                    <tr>

                        <td>
                            <select class="form-control" id="ServiceId" name="ServiceId">
                                @foreach (var entity in Model.BaseServices)
                                {
                                    <option value="@entity.Value">@entity.DisplayText</option>
                                }
                            </select>

                        </td>
                    </tr>
                    </tbody>
                </table>
            </form>
            <table id="SegmentServicePriceParameterTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                <thead>
                <tr>

                    <th>@L("Name")</th>
                    <th>@L("Value")</th>

                </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
