@using Sixoclock.Onyx.Web.Areas.App.Models.Common.Modals

@using Sixoclock.Onyx.Web.Areas.App.Models.ChargepointModelImages
@model CreateOrEditChargepointModelImageViewModel

@Html.Partial("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateChargepointModelImage")))

<div class="modal-body">
    <form role="form" novalidate class="form-validation">

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <input type="hidden" name="Id" value="@Model.ChargepointModelImage.Id" />
            <input type="hidden" name="TenantId" value="@Model.ChargepointModelImage.TenantId" />
            <div class="form-group">
                <label class="form-md-floating-label">@L("Comment")</label>
                <input class="form-control" type="text" name="Comment" value="@Model.ChargepointModelImage.Comment" required>
            </div>
        </div>
        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <div class="form-group">
                <label class="form-md-floating-label">@L("IsActive")</label>
                <input class="form-md-checkboxes" type="checkbox" name="IsActive" value="true" @(@Model.ChargepointModelImage.IsActive ? "checked=\"checked\"" : "") required>
            </div>
        </div>

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <div class="form-group">
                <label class="form-md-floating-label">@L("ChargePointModel")</label>
                <select name="ChargepointModelId" class="form-control bs-select" required>
                    <option value="0">@L("DropdownDefault")</option>
                    @*@for (int i = 0; i < ViewBag.Countries.Items.Count; i++)
                        {
                            @if (Model.Region.CountryId == ViewBag.Countries.Items[i].Id)
                            {

                                <option value="@ViewBag.Countries.Items[i].Id" selected>@ViewBag.Countries.Items[i].Name</option>
                            }
                            else
                            {
                                <option value="@ViewBag.Countries.Items[i].Id">@ViewBag.Countries.Items[i].Name</option>
                            }

                        }*@
                </select>
            </div>

        </div>

    </form>
    <form id="ChargepointModalImageForm" method="POST" action="@(ApplicationPath + "ChargepointModelImage/UploadChargepointModelImage")">
        <div class="form-group">
            <input type="file" name="ChargepointModelImage" />
            <span class="help-block m-b-none">@L("ChargepointModelImage_Change_Info")</span>
        </div>
        <img id="ChargepointModelImageResize" src="" />
    </form>
</div>

@Html.Partial("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
